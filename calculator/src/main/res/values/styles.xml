<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
<!--        <item name="android:layout_marginEnd">@dimen/buttons_margin_horizontal</item>-->
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="cornerRadius">@dimen/buttons_corner_radius</item>
    </style>
    <style name="button_style.operand">
        <item name="android:backgroundTint">@color/orange</item>
    </style>
    <style name="button_style.number">
        <item name="android:backgroundTint">@color/teal_700</item>
    </style>

    <style name="output_style">
        <item name="android:layout_height">@dimen/output_height</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginStart">@dimen/buttons_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/buttons_margin_horizontal</item>
        <item name="android:maxLength">30</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>